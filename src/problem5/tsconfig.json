{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
        "@entities/*": ["./entities/*"]
    }
  },
  "include": ["app.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
